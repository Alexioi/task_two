extends ../main.pug

block title
    title Colors and Type
block content
    .row
        .column
            +palette('Dark Shade 100%','#1F2041')(class="dark-shade")
            +palette('Dark Shade 75%','#1F2041')(class="dark-shade_75")
            +palette('Dark Shade 50%','#1F2041')(class="dark-shade_50")
            +palette('Dark Shade 25%','#1F2041')(class="dark-shade_25")
            +palette('Dark Shade 5%','#1F2041')(class="dark-shade_05")
            +palette('Purpe','#BC9CFF')(class="purple")
            +palette('Green','#6FCF97')(class="green")
        .column
            +type('H1','This one is the sub-section or widget title')(classtag="font-h1_tag", classtext="font-h1")
            +type('H2','Next one is the item title inside widgets')(classtag="font-h2_tag", classtext="font-h2")
            +type('H3','This is a label or CTA text')(classtag="font-h3_tag", classtext="font-h3")
            +type('Body','This is the body text which is used for most of the design, like paragraphs, lists, etc.')(classtag="font-body_tag", classtext="font-body")
    .row
        +header
    .row
        +bulletlist('Bullet list',['Нельзя с питомцами','Без вечеринок и мероприятий','Время прибытия — после 13:00, а выезд до 12:00'])
    .row
        .column
            div
                +button('CLICK ME')(class="button")
                +button('CLICK ME')(class="button button_hover")
            div
                +button('CLICK ME')(class="button_empty")
                +button('CLICK ME')(class="button_empty button_hover")
            div
                +button('CLICK ME')(class="button_text")
                +button('CLICK ME')(class="button_text button_hover")
            div
                +button('CLICK ME')(class="button")
    .row
        +dropdown(['взрослые','дети','младенцы'])