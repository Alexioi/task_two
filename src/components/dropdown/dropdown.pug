mixin dropdown

  - var items = ['взрослые','дети','младенцы']
  - var number = ['0', '2', '5']
  
  .dropdown
    input.dropdown__info(type="text" value="Сколько гостей" readonly)
    button.dropdown__button-visible \/
    .dropdown__visible.dropdown__visible_hide
      ul.dropdown__list
        each item, i in items     
          li.dropdown__item= item 
            .dropdown__button-list
              button.dropdown__button.dropdown__button-minus -
              span.dropdown__number= number[i]
              button.dropdown__button.dropdown__button-plus +
          
      .dropdown__bot-button
        +button('очистить', 'text')
        +button('применить', 'text')