include ../logo/logo

mixin footer(options)
  -
    var linkList = [{header: 'Навигация',
                    itemList: ['О нас',
                              'Новости',
                              'Служба поддержки',
                              'Услуги'
                    ]},
                    {header: 'Навигация',
                    itemList: ['О нас',
                              'О сервесе',
                              'Наша команда',
                              'Вакансии',
                              'Инвесторы'
                    ]},
                    {header: 'Служба поддержки',
                    itemList: ['О нас',
                              'Новости',
                              'Служба поддержки',
                              'Услуги'
                    ]}
    ]
    var socialLinks = ['twitter.svg', 'facebook.svg', 'instagram.svg']

  .footer
    .footer__main(class= options.mobile ? 'footer__main_mobile' : '')
      .footer__logo-item
        .footer__logo(class= options.mobile ? 'footer__logo_mobile' : '')
          +logo({full: true})
        p.footer__text(class= options.mobile ? 'footer__text_mobile' : '') Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
      .footer__nav(class= options.mobile ? 'footer__nav_mobile' : '')
        each linkItem in linkList
          .footer__nav-item
            h3.footer__header= linkItem.header
            ul.footer__nav-list
              each item in linkItem.itemList
                li.footer__nav-item-list
                  a(href='#').footer__nav-link= item
      .footer__subscription(class= options.mobile ? 'footer__subscription_mobile' : '')
        h3.footer__header Подписка
        p.footer__text Получайте специальные предложения и новости сервиса
    .footer__line(class= options.mobile ? 'footer__line_mobile' : '')
    .footer__bottom(class= options.mobile ? 'footer__bottom_mobile' : '')
      .footer__copyright-text(class= options.mobile ? 'footer__copyright-text_mobile' : '') Copyright © 2018 Toxin отель. Все права зачищены.
      .footer__social
        each socialLink in socialLinks
          a.footer__social-link(href="#")
            img(src='./img/' + socialLink).footer__social-img
