extends ../main.pug

include ../../components/like-button/like-button.pug
include ../../components/comment/comment
include ../../components/caption/caption
include ../../components/text-field/text-field
include ../../components/button/button
include ../../components/toggle/toggle
include ../../components/checkbox_list/checkbox_list
include ../../components/radio-buttons/radio-buttons
include ../../components/pagination/pagination
include ../../components/icon-text-list/icon-text-list
include ../../components/bullet-list/bullet-list
include ../../components/dropdown/dropdown
include ../../components/subscription-text-field/subscription-text-field
include ../../components/date-dropdown/date-dropdown
include ../../components/expandable-checkbox-list/expandable-checkbox-list
include ../../components/ratebutton/ratebutton

block title
  title Form elements
block content

  .form-elements__main
    .form-elements__group-1
      .form-elements__inputs-top-group
        +text-field({
          header: 'Text Field',
          legend: 'Default',
          value: 'Email'
        })
        +text-field({
          header: 'Text Field',
          legend: 'Hover / Focus',
          hover: 'true',
          value: 'This is pretty awesome'
        })
        +text-field({
          header: 'masked text field',
          legend: 'Default',
          masked: 'true',
          value: 'ДД.ММ.ГГГГ'
        })
      .form-elements__inputs-bottom-group
        +date-dropdown({leftHeader: 'date Dropdown', rightHeader: 'date Dropdown', rightValue: '19.08.2019'})
        +subscription-text-field
    .form-elements__group-2
      +checkbox_list({
        items: [
          {text: 'Можно курить'}, 
          {text: 'Можно с питомцами',
          checked: 'checked'}, 
          {text: 'Можно пригласить гостей (до 10 человек)',
          checked: 'checked'}
        ]
      })
      +radio-buttons
      .form-elements__toggle-group
        +toggle({checked: 'true'})
        +toggle
      +like-button({number: 2})
      +like-button({number: 12, checked: 'true'})
      +ratebutton('raiting1', 4)  
      +ratebutton('raiting2', 5)  
    .form-elements__group-3
      .form-elements__buttons-group
        .form-elements__buttons-row
          +button({text: 'CLICK ME'})
          +button({text: 'CLICK ME', hover: 'true'})
        .form-elements__buttons-row
          +button({text: 'CLICK ME', type: 'border'})
          +button({text: 'CLICK ME', type: 'border', hover: 'true'})
        .form-elements__buttons-row
          +button({text: 'CLICK ME', type: 'text'})
          +button({text: 'CLICK ME', type: 'text', hover: 'true'})
        +button({text: 'перейти к оплате', type: 'long'})
        +pagination
    .form-elements__group-4
      +dropdown({
        type: 'guests',
        opened: 'True',
        
      })
      +dropdown({
        type: 'guests',
        opened: 'True'
      })
    .form-elements__group-5
      +dropdown({
        type: 'guests',
        opened: 'True',
        number: [0, 2, 5]
      })
    .form-elements__group-6
      +dropdown({
        type: 'conveniences'  
      })
    .form-elements__group-7
      +expandable-checkbox-list({
        items: [
          {text: 'Завтрак'},
          {text: 'Письменный стол',
          checked: 'checked'},
          {text: 'Стул для кормления',
          checked: 'checked'},
          {text: 'Кроватка',
          checked: 'checked'},
          {text: 'Телевизор'},
          {text: 'Шампунь'},
          {text: 'Телевизор'},
          {text: 'Шампунь'}
        ],
      })
      +expandable-checkbox-list({
        open: true,
        items: [
          {text: 'Завтрак'},
          {text: 'Письменный стол',
          checked: 'checked'},
          {text: 'Стул для кормления',
          checked: 'checked'},
          {text: 'Кроватка',
          checked: 'checked'},
          {text: 'Телевизор'},
          {text: 'Шампунь'},
          {text: 'Телевизор'},
          {text: 'Шампунь'}
        ],
      })
    .form-elements__group-8
      +checkbox_list({
        items: [
          {desc: 'Широкий коридор', 
          sub: 'Ширина коридоров в номере не менее 91 см.'}, 
          {desc: 'Помощник для инвалидов', 
          sub: 'На 1 этаже вас встретит специалист и проводит до номера.'}
        ], 
        type: 'rich'
      })
    .form-elements__group-9
      +bullet-list({
        items:
          [
            'Нельзя с питомцами',
            'Без вечеринок и мероприятий',
            'Время прибытия — после 13:00, а выезд до 12:00'
          ]
      }) 
    .form-elements__group-10
      +icon-text-list({
        items:
          [{
            imgName: 'smile',
            header: 'Комфорт', 
            subText: 'Шумопоглщающие стены'
          },
          {
            imgName: 'home',
            header: 'Удобство', 
            subText: 'Окно в каждой из спален'
          }]
      })
    .form-elements__group-11
      +comment({
        img: './img/avatar-murad.png',
        number: 12,
        checked: 'true',
        author: 'Мурад Сарафанов', 
        date: '5 дней назад', 
        text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'
      }) 
