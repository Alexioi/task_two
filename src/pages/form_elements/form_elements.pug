  .form-elements__row

    .form-elements__col
      .form-elements__group-1
        +text-field({
          header: 'Text Field',
          legend: 'Default',
          value: 'Email'
        })
        +text-field({
          header: 'Text Field',
          legend: 'Hover / Focus',
          hover: 'true',
          value: 'This is pretty awesome'
        })
        +text-field({
          header: 'Text Field',
          legend: 'Hover / Focus',
          hover: 'true',
          value: 'This is pretty awesome',
          type: 'dropdown'
        })

    .form-elements__gap

    .form-elements__col
      .form-elements__group-2

        +checkbox_list({
          items: [
            {text: 'Можно курить'}, 
            {text: 'Можно с питомцами',
            checked: 'checked'}, 
            {text: 'Можно пригласить гостей (до 10 человек)',
            checked: 'checked'}
          ]
        })
        +radio-buttons
        +toggle({checked: 'true'})
        +toggle
        +like-button({number: 2})
        +like-button({number: 12, checked: 'true'})

    .form-elements__gap

    .form-elements__col
      .form-elements__group-3
        +button({text: 'CLICK ME'})
        +button({text: 'CLICK ME', hover: 'true'})
        +button({text: 'CLICK ME', type: 'border'})
        +button({text: 'CLICK ME', type: 'border', hover: 'true'})
        +button({text: 'CLICK ME', type: 'text'})
        +button({text: 'CLICK ME', type: 'text', hover: 'true'})
